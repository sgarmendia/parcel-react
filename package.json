{
  "name": "parcel-react",
  "version": "1.0.0",
  "description": "Light react boilerplate with Parcel",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "start": "parcel index.html",
    "build": "parcel build index.html --out-dir build"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "babel-jest"
    }
  },
  "keywords": [
    "react",
    "parcel",
    "boilerplate"
  ],
  "author": "SG",
  "license": "ISC",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.5.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "jest": "^24.5.0",
    "sass": "^1.17.3"
  }
}
